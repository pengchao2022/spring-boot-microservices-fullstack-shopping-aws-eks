{
  "analysis": {
    "analyzer": {
      "ik_smart": {
        "type": "custom",
        "tokenizer": "ik_smart"
      },
      "ik_max_word": {
        "type": "custom", 
        "tokenizer": "ik_max_word"
      },
      "pinyin_analyzer": {
        "type": "custom",
        "tokenizer": "pinyin_tokenizer"
      }
    },
    "tokenizer": {
      "pinyin_tokenizer": {
        "type": "pinyin",
        "keep_separate_first_letter": false,
        "keep_full_pinyin": true,
        "keep_original": true,
        "limit_first_letter_length": 16,
        "lowercase": true
      }
    },
    "filter": {
      "pinyin_filter": {
        "type": "pinyin",
        "keep_full_pinyin": false,
        "keep_joined_full_pinyin": true,
        "keep_original": true,
        "limit_first_letter_length": 16,
        "remove_duplicated_term": true
      }
    }
  }
}